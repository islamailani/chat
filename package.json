{
  "name": "chat",
  "version": "1.0.0",
  "description": "rndevoo's chat microservice",
  "main": "src/server.js",
  "scripts": {
    "build": "babel src -d dist",
    "serve:dev": "nodemon index.js --exec babel-node",
    "serve:prod": "node dist/server.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "preserve:prod": "npm run build",
    "test": "nyc npm run test:unit && npm run test:integration",
    "test:unit": "mocha src/**/*.spec.js --compilers js:babel-register",
    "test:integration": "exit 0",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint src test --fix",
    "copyenvfile": "scripts/gen_env_file"
  },
  "repository": "git@github.com:rndevoo/messages.git",
  "author": "Diego Stratta <strattadb@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "amqplib": "^0.5.1",
    "mongoose": "^4.9.7",
    "winston": "^2.3.1",
    "ws": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-dynamic-import-node": "^1.0.1",
    "babel-plugin-syntax-trailing-function-commas": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-flow": "^6.23.0",
    "chai": "^4.0.0",
    "chai-as-promised": "^6.0.0",
    "coveralls": "^2.13.1",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "flow-bin": "^0.47.0",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.1",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0"
  },
  "engines": {
    "node": ">=7.9.0"
  },
  "optionalDependencies": {
    "bufferutil": "^3.0.0",
    "utf-8-validate": "^3.0.1"
  }
}
